<h1>New Game</h1>
<div class="container">
  <% @letters.each do |letter| %>
  <div class="letter"><%= letter[0] %></div>
  <% end %>
</div>

<div>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @letters %>
    <input type="text" name="word" placeholder="What is your longuest word ?">
    <input type="submit">
  </form>
</div>
